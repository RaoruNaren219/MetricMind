# Dremio 1 Configuration (using PAT token)
DREMIO1_HOST=your-dremio1-host
DREMIO1_PORT=9047
DREMIO1_USERNAME=your-username
DREMIO1_PASSWORD=your-password
DREMIO1_TOKEN=your-pat-token
DREMIO1_AUTH_TYPE=token

# Dremio 2 Configuration (using password)
DREMIO2_HOST=your-dremio2-host
DREMIO2_PORT=9047
DREMIO2_USERNAME=your-username
DREMIO2_PASSWORD=your-password
DREMIO2_AUTH_TYPE=password

# HDFS Configuration
HDFS_HOST=your-hdfs-host
HDFS_PORT=8020
HDFS_USER=your-hdfs-user
HDFS_PATH=/path/to/data

# Datadog Configuration (Optional)
DD_API_KEY=your-api-key
DD_APP_KEY=your-app-key
DD_ENABLED=true
DD_HOST=localhost
DD_PORT=8125

# Application Configuration
REQUEST_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=1

# Application Settings
APP_HOST=0.0.0.0
APP_PORT=8000 